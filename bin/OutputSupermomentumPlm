#!/usr/bin/env python
"""
Computes the supermomentum Plm from h and Psi2 and writes to a new file.
The quantities h and Psi2 must be extrapolated waveforms in scri format.

"""

import sys

sys.path.append("/home/dante/Utils/")
from BMStoolbox import output_Plm
import argparse

p = argparse.ArgumentParser(description=__doc__)
p.add_argument("--rh", type=str, help="extrapolated rhOverM HDF5 waveform file")
p.add_argument("--psi2", type=str, help="extrapolated r3Psi2OverM HDF5 waveform file")
p.add_argument(
    "--acc",
    type=int,
    default=4,
    help="desired accuracy order in the derivatives, must be an even integer",
)
args = p.parse_args()

output_Plm(args.rh, args.psi2, args.acc)
