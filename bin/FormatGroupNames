#!/usr/bin/env python
"""
Removes the prefix of groups in a FiniteRadii waveform file. If there is
no prefix then this does nothing. Ex:

    "Psi2_R0100.dir" would be renamed to the standard "R0100.dir"


"""

import sys
sys.path.append('/home/dante/Utils/')
from h5pytoolbox import format_group_names
import argparse

p = argparse.ArgumentParser(description=__doc__)
p.add_argument(
    'filename',
    type=str,
    help='Name of the HDF5 waveform file to edit')
p.add_argument(
    '--dry-run',
    dest='dry_run',
    action='store_true',
    default=False,
    help='Print what the changes would be without overwriting the file.')
args = p.parse_args()

format_group_names(args.filename, args.dry_run)
