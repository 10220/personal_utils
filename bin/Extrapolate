#!/bin/bash

UseScri=false

# Check if we are using GWFrames (default) or scri
for item in $*
do
  if [ "$item" == "--scri" ]
  then
    UseScri=true 
  fi
done

if [ $UseScri == true ]
then

  # Now that we know we are using scri, strip "--scri" from the arg list
  for arg
  do
    shift
    [ "$arg" = "--scri" ] && continue
    set -- "$@" "$arg"
  done

  # Extrapolate with scri
  python3 /home/dante/Utils/extrapolate_scri.py $*

else
  # Extrapolate with GWFrames
  python2 /home/dante/Utils/extrapolate_gwframes.py $*
fi
